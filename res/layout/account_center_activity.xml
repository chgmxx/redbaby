<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_backgroud" >

    <FrameLayout
        android:id="@id/fraHead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg" >

        <TextView
            android:id="@+id/head_more_text"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@anim/head_button"
            android:gravity="center"
            android:text="更多" />

        <TextView
            style="@style/style_18_BEBEBE_BOLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="账号管理" />
        <TextView
            android:id="@+id/head_quit_text"
            style="@style/style_15_EBEBEB_BOLD"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:background="@anim/head_button_greytored"
            android:gravity="center"
            android:text="退出登陆" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/my_account_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/fraHead"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="25.0dip"
        android:layout_marginTop="20.0dip" 
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_account_username"
            android:textColor="#ff505050"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="用户名 : MR.wang"
            android:layout_marginBottom="5dip"
             />
        <TextView
            android:id="@+id/tv_account_grad"
            android:textColor="#ff505050"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="会员等级 : 黄金剩斗士"
            android:layout_marginBottom="5dip"
             />
        <TextView
            android:id="@+id/tv_account_score"
            android:textColor="#ff505050"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="总积分 : 8000"
            android:layout_marginBottom="5dip"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_account_title"
        android:layout_gravity="center"
        android:layout_marginBottom="50.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@anim/shape_rounded_rectangle2"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/my_order"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_order_count"
                style="@style/style_18_231F20_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="我的订单 (10)" />

            <TextView
                android:id="@+id/my_name_text"
                style="@style/style_14_4B4B4B"
                android:drawableRight="@drawable/arrow_gray"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10.0dip"
                android:gravity="right|center" />

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/my_address"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_18_231F20_BOLD"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="地址管理" />

            <TextView
                android:id="@+id/my_bonus_text"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/arrow_gray"
                android:layout_marginRight="10.0dip"
                android:gravity="right|center" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/my_pref"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_pref_count"
                style="@style/style_18_231F20_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="优惠券/礼品卡 (3) " />

            <TextView
                android:id="@+id/my_level_text"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/arrow_gray"
                android:layout_marginRight="10.0dip"
                android:gravity="right|center" />
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />
        <LinearLayout
            android:id="@+id/my_collect"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_collect_count"
                style="@style/style_18_231F20_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:gravity="left|center"
                android:text="收藏夹 (6)" />

            <TextView
                android:id="@+id/my_level_text2fdsf"
                style="@style/style_14_C21513_BOLD"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/arrow_gray"
                android:layout_marginRight="10.0dip"
                android:gravity="right|center" />
        </LinearLayout>
    </LinearLayout>

    

    <include
        android:id="@id/bottomBar"
        layout="@layout/bottombar" />

</RelativeLayout>